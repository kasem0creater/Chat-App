<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet_linear_setting"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_gravity="center_horizontal|center"
    android:gravity="center_horizontal|center"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@android:color/transparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp">

        <!--scrollview-->
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="12dp"
            android:scrollbars="horizontal">

            <!--Relation-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="32dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|center">

                    <!-- card show account profile-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_profile"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        android:padding="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_user_settings_100px"
                                android:layout_centerInParent="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="70dp"
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/linear_card_raius"
                                android:gravity="center_horizontal|center">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_show_profile"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Profile"
                                    android:textSize="22sp"
                                    android:textColor="@android:color/darker_gray"
                                    app:cornerRadius="10dp"/>

                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- card create new Group-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_group"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="20dp"
                        android:padding="8dp"
                        android:layout_margin="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_user_groups_100px"
                                android:layout_centerInParent="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="70dp"
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/linear_card_raius"
                                android:gravity="center_horizontal|center">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_show_dialog_group"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Group"
                                    android:textSize="22sp"
                                    android:textColor="@android:color/darker_gray"
                                    app:cornerRadius="10dp"/>

                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- card find friend -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_find_friend"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="20dp"
                        android:padding="8dp"
                        android:layout_margin="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_find_replace_black_24dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="70dp"
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/linear_card_raius"
                                android:gravity="center_horizontal|center">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_show_find_friend"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Friends"
                                    android:textSize="22sp"
                                    android:textColor="@android:color/darker_gray"
                                    app:cornerRadius="10dp"/>

                            </LinearLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- card create new Group-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_logout"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="20dp"
                        android:padding="8dp"
                        android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/logout_rounded"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="70dp"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/linear_card_raius"
                            android:gravity="center_horizontal|center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_logout_user"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
                                android:text="Log Out"
                                android:textSize="22sp"
                                android:textColor="@android:color/darker_gray"
                                app:cornerRadius="10dp"/>

                        </LinearLayout>
                    </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!--break line-->
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>